.container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 999;
  background-color: rgba(0, 0, 0, 0.7);
  display: flex;
  justify-content: flex-end;
  flex-direction: column;
}
.selected_btn {
  width: 100%;
  height: 160rpx;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
}
.selected_btn text {
  width: 90%;
  height: 80rpx;
  border-radius: none;
  border-bottom: 1rpx solid #C8C8C5;
  background-color: #fffffb;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #88C058;
}
.cancel {
  width: 100%;
  height: 80rpx;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.cancel text {
  width: 90%;
  height: 80rpx;
  border-radius: 60rpx;
  font-size: 32rpx;
  color: #fffffb;
  background-color: #88C058;
  display: flex;
  align-items: center;
  justify-content: center;
}