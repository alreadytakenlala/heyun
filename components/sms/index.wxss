.container {
  width: 100%;
  display: flex;
  justify-content: center;
  z-index: 999;
}
.sms {
  width: 95%;
  margin-top: 10rpx;
  height: 150rpx;
  background-color: #67B9C6;
  z-index: 999;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-radius: 10rpx;
}
.img_section {
  width: 20%;
}
.img_section image {
  width: 90rpx;
  height: 90rpx;
  margin: 30rpx;
}
.msg_section {
  width: 58%;
  height: 100rpx;
  display: flex;
  flex-direction: column;
}
.msg_section > text, .content {
  font-size: 30rpx;
  color: white;
  line-height: 50rpx;
}
.content {
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
}
.content text {
  color: #0D90FF;
}
.btn_section {
  width: 22%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.btn_section text {
  width: 120rpx;
  height: 60rpx;
  border-radius: 30rpx;
  border: 1rpx solid #7DC4CE;
  font-size: 32rpx;
  color: white;
  text-align: center;
  line-height: 60rpx;
}