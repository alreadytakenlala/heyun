/*-- 角色列表 --*/
.role {
  width: 100%;
  height: 150rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #E5E5E5;
}
.role image {
  width: 80rpx;
  height: 80rpx;
  margin: 0 30rpx;
}
.info {
  width: 80%;
}
.info_up {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.info_up text:first-child {
  font-size: 32rpx;
  color: #3A89CC;
  line-height: 60rpx;
}
.info_up text:last-child {
  margin-left: 30rpx;
  width: 120rpx;
  height: 40rpx;
  font-size: 32rpx;
  color: #fff;
  border-radius: 20rpx;
  text-align: center;
  line-height: 40rpx;
}
.acreerParent {
  background-color: #6DD0CD;
}
.acreerTeacher {
  background-color: #FFC800;
}
.info_down {
  width: 100%;
  display: flex;
  flex-direction: row;
}
.info_down text {
  font-size: 28rpx;
  color: #606060;
  line-height: 60rpx;
}
.info_down text:first-child {
  width: 70%;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
}
.info_down text:last-child {
  position: absolute;
  right: 30rpx;
}
.activeModu {
  background-color: #f6f5ec;
}
/*-- 毕业角色列表 --*/
.down_list {
  width: 100%;
  height: 100rpx;
  background-color: #F5F5F5;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.down_list text {
  font-size: 36rpx;
  color: #323232;
  margin-left: 30rpx;
}
.down_list image {
  width: 35rpx;
  height: 35rpx;
  position: absolute;
  right: 30rpx;
}
.rotate90 {
  transform: rotate(90deg);
}