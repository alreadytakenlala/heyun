.container {
  width: 100%;
  height: 100%;
  background-color: #FAF8F5;
  border-top: 1rpx solid #B5B6B6;
  display: flex;
  flex-direction: row;
}
/*-- 订阅专栏 --*/
.classification {
  width: 30%;
  height: 100%;
  background-color: #E9EAEA;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.classification text {
  height: 120rpx;
  width: 100%;
  line-height: 120rpx;
  text-align: center;
  font-size: 32rpx;
}
/*-- 订阅列表 --*/
.subscription {
  width: 70%;
  display: flex;
  flex-direction: column;
}
.topic {
  width: 100%;
  height: 150rpx;
  border-bottom: 1rpx solid #E9E9E9;
  display: flex;
  align-items: center;
}
.ico {
  width: 120rpx;
  height: 120rpx;
  margin-left: 15rpx;
}
.content {
  width: 55%;
  height: 120rpx;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.content text {
  font-size: 32rpx;
  line-height: 50rpx;
}
.content text:last-child {
  color: #BABABA;
}
.add {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  right: 20rpx;
}