page {
  background-color: #F6F5F4;
}
.line {
  border-top: 1rpx solid #E0E0E0;
  height: 0;
  width: 100%;
}
input {
  width: 100%;
  height: 100rpx;
  padding: 0 30rpx;
  margin-top: 30rpx;
  border-top: 1rpx solid #E9E9E9;
  border-bottom: 1rpx solid #E9E9E9;
  background-color: #FFFFFB;
}
.prompt {
  font-size: 32rpx;
  color: #656766;
  margin-left: 30rpx;
}
.placeholder {
  color: #CCCCCC;
  font-size: 32rpx;
}
/*-- 完成按钮 --*/
.complete {
  position: fixed;
  left: 0;
  bottom: 0;
  right: 0;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: row;
  border-top: 1rpx solid #C8C8C5;
  background-color: #CACACC;
}
.complete image {
  width: 50rpx;
  height: 50rpx;
}
.complete text {
  margin-left: 30rpx;
}