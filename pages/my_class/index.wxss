.line {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  height: 1rpx;
  background-color: #B2B2B2;
}
.container {
  width: 100%;
  height: 100%;
  background-color: #F6F5F4;
}
/*-- 班级信息 --*/
.information {
  width: 100%;
  height: 200rpx;
  display: flex;
  flex-direction: row;
}
.info_ico {
  width: 20%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.info_ico image {
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
}
.info_content {
  width: 80%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.info_content text {
  font-size: 32rpx;
  color: #6F7170;
  line-height: 60rpx;
  margin-left: 20rpx;
}
/*-- 班级介绍 --*/
.introduction {
  width: 100%;
  height: 80rpx;
  background-color: #FFFFFB;
  display: flex;
  align-items: center;
  flex-direction: row;
}
.introduction text:first-child {
  font-size: 32rpx;
  color: black;
  margin-left: 30rpx;
}
.introduction text:last-child {
  font-size: 32rpx;
  color: #6F7170;
  margin-left: 30rpx;
}
/*-- 加入班级按钮 --*/
.btn {
  width: 100%;
  height: 90rpx;
  display: flex;
  justify-content: center;
  margin-top: 40rpx;
}
.join_btn {
  width: 90%;
  border-radius: 45rpx;
  text-align: center;
  line-height: 90rpx;
  color: #FFFFFB;
  font-size: 32rpx;
  background-color: #88C058;
}