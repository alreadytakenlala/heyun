.line {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  height: 1rpx;
  background-color: #B2B2B2;
}
page {
  background-color: #F6F5F4;
}
/*-- 名字栏 --*/
.child_name {
  width: 100%;
  height: 100rpx;
  background-color: #FFFFFB;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 50rpx;
  border-top: 1rpx solid #C8C9C9;
  border-bottom: 1rpx solid #C8C9C9;
}
.child_name input {
  width: 95%;
  box-sizing: border-box;
  padding-left: 15rpx;
  font-size: 32rpx;
}
.placeholder {
  font-size: 32rpx;
  color: #CCC;
}
/*-- 性别栏 --*/
.gender {
  width: 100%;
  height: 100rpx;
  background-color: #FFFFFB;
  border-bottom: 1rpx solid #C8C9C9;
  display: flex;
  align-items: center;
  flex-direction: row;
}
.gender > text {
  width: 30%;
  font-size: 32rpx;
  color: block;
  margin-left: 30rpx;
}
.check_box {
  width: 35%;
  display: flex;
  align-items: center;
}
.check_box image {
  width: 45rpx;
  height: 45rpx;
}
.check_box text {
  font-size: 32rpx;
  margin-left: 20rpx;
}