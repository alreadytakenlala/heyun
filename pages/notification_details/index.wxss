page {
  background-color: #F5F5F5;
}
text {
  color: #333;
  font-size: 32rpx;
}
.line {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 0;
  border-top: 1rpx solid #D9D9D9;
}
.container {
  position: absolute;
  top: 1rpx;
  left: 0;
  right: 0;
  padding-bottom: 10rpx;
}
.head, .content, .footer {
  margin: 0rpx 10rpx 0 10rpx;
  border-top: 1rpx solid #D9D9D9;
  border-left: 1rpx solid #D9D9D9;
  border-right: 1rpx solid #D9D9D9;
  background-color: #FFFFFB;
}
.head {
  margin-top: 10rpx;
  display: flex;
  justify-content: flex-start;
}
.head text {
  margin: 0 30rpx 0 30rpx;
  line-height: 100rpx;
}
.container .content {
  display: flex;
  flex-direction: column;
}
.content text {
  margin: 20rpx 30rpx 0 30rpx;
  text-indent: 2em;
}
.content view {
  display: flex;
  justify-content: flex-end;
  margin-bottom: 20rpx;
}
.footer {
  height: 100rpx;
  border-bottom: 1rpx solid #D9D9D9;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.footer image {
  width: 50rpx;
  height: 50rpx;
}
.footer text {
  color: #52759B;
  margin: 0 30rpx 0 15rpx;
}