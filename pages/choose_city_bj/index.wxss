.line {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  height: 1rpx;
  background-color: #B2B2B2;
}
/*-- 搜索 --*/
.search {
  width: 100%;
  height: 100rpx;
  background-color: #F9F8F7;
  display: flex;
  justify-content: center;
  align-items: center;
}
.search input {
  width: 90%;
  height: 70%;
  background-color: white;
}
.placeholder {
  color: #808080;
  font-size: 32rpx;
  text-align: center;
  border: 1rpx solid #DFDFE1;
}
/*-- 选中栏 --*/
.selected_box {
  width: 100%;
  height: 80rpx;
  background-color: #F6F5F4;
  display: flex;
  align-items: center;
}
.selected_box text {
  font-size: 36rpx;
  color: #3184CA;
  margin-left: 30rpx;
}
.option {
  width: 100%;
  height: 70rpx;
  border-bottom: 1rpx solid #D8D8D8;
  display: flex;
  align-items: center;
}
.option text {
  font-size: 32rpx;
  color: #515151;
  margin-left: 30rpx;
}