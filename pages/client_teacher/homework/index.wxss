page {
  background-color: #F6F5F4;
}
/*-- 班级和科目 --*/
.class, .subject {
  display: flex;
  flex-direction: row;
  height: 100rpx;
  border-bottom: 1rpx solid #C8C8C5;
  background-color: #fffffb;
}
.class label, .subject label {
  width: 15%;
  font-size: 34rpx;
  line-height: 100rpx;
  margin-left: 30rpx;
  color: #333;
}
.class input, .subject input {
  width: 80%;
  height: 100%;
  font-size: 32rpx;
  color: #333;
}

/*-- 作业内容 --*/
.work_content {
  display: flex;
  flex-direction: column;
  justify-content: center;
  background-color: #fffffb;
}
.work_h {
  width: 100%;
  height: 100rpx;
  background-color: #F6F5F4;
}
.work_h text {
  font-size: 34rpx;
  height: 100rpx;
}
.work_h_left {
  float: left;
  line-height: 100rpx;
  margin-left: 30rpx;
  color: #333;
}
.work_h_right {
  float: right;
  line-height: 100rpx;
  color: #9F9E9E;
  margin-right: 30rpx;
}
.w_content {
  padding: 20rpx 30rpx;
}
.w_content textarea {
  min-height: 300rpx;
  z-index: 0;
}
.w_content label {
  font-size: 26rpx;
  color: #9F9E9E;
  float:right;
}
.take_photo {
  background-color: #fffffb;
  display: flex;
  flex-direction: row;
}
.take_photo > image {
  margin: 10rpx 30rpx;
  width: 150rpx;
  height: 150rpx;
}
.photo {
  width: 60%;
  height: 150rpx;
  margin-left: 30rpx;
  margin: 10rpx 30rpx;
  display: flex;
  flex-direction: row;
}
.photo image {
  width: 150rpx;
  height: 150rpx;
  margin: 10rpx;
}

/*-- 反馈和落款 --*/
.feedback, .signature {
  display: flex;
  flex-direction: row;
  height: 100rpx;
  background-color: #fffffb;
  border-bottom: 1rpx solid #C8C8C5;
}
.feedback label, .signature label {
  width: 25%;
  font-size: 34rpx;
  line-height: 100rpx;
  margin-left: 30rpx;
  color: #333;
}
.feedback input, .signature input {
  width: 75%;
  height: 100%;
  font-size: 32rpx;
  color: #A4C9E7;
}
.feedback image, .signature image {
  width: 50rpx;
  height: 50rpx;
  margin: 25rpx 0;
}

/*-- 页脚导航栏 --*/
.voice {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: row;
  height: 80rpx;
  border-top: 1rpx solid #C8C8C5;
  align-items: center;
  background-color: #F6F5F4;
}
.voice view {
  height: 70rpx;
  width: 33%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.voice image {
  width: 40rpx;
  height: 40rpx;
}
.voice_text, .send_voice {
  border-right: 1rpx solid #C8C8C5;
}
.voice text {
  font-size: 32rpx;
  color: #333;
  margin-left: 30rpx;
}